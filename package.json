{
  "name": "mermaid-editor",
  "version": "1.0.0",
  "private": true,
  "description": "A modern, interactive Mermaid diagram editor built with Next.js",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "format": "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --write .",
    "format:check": "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@monaco-editor/react": "latest",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-toast": "1.2.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "^1.3.1",
    "lucide-react": "^0.454.0",
    "mermaid": "latest",
    "monaco-editor": "latest",
    "next": "14.2.16",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss": "^4.1.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tw-animate-css": "1.3.3",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --write"
    ]
  }
}
